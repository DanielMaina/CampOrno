@model CampOrno.Models.CamperActivity

@{
    ViewData["Title"] = "Remove Activity";
}

<h2>Remove Activity for Camper: @Model.Camper.FullName</h2>

<h3>Are you sure you want to delete this Activity?</h3>
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfSessions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfSessions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camper)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camper.FullName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="CamperActivities" asp-route-CamperID="@Model.CamperID">Back to Camper</a>
    </form>
</div>
