@model CampOrno.Models.Activity

@{
    ViewData["Title"] = "Details";
}

<h1>Activity Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CamperActivities)
        </dt>
        <dd class="col-sm-10">
            @foreach (var c in Model.CamperActivities)
            {
                @Html.DisplayFor(modelItem => c.Camper.FullName) <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to Activities List</a>
</div>
