@model CampOrno.Models.Counselor

@{
    ViewData["Title"] = "Details";
}

<h1>Counselor Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nickname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nickname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SIN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SINDisplay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campers)
        </dt>
        <dd class="col-sm-10">
            @{
                int camperCount = Model.Campers.Count;
                if (camperCount > 0)
                {
                        var campers = Model.Campers.ToList();
                        for (int i = 0; i < camperCount-1; i++)
                        {
                            <a asp-controller="Campers" asp-action="Details" asp-route-ID="@campers[i].ID">
                                @campers[i].FullName
                            </a> @:, 
                        }
                        <a asp-controller="Campers" asp-action="Details" asp-route-ID="@campers[camperCount-1].ID">
                            @campers[camperCount-1].FullName
                        </a>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to Counselor List</a>
</div>
